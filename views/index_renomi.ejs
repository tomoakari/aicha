    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=UA-174561230-1"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "UA-174561230-1");
    </script>
